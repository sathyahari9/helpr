{
    "name": "Helpr",
    
    "version": "1.0",
    
    "description": "This Chrome extension that detects the user's face and changes the web experience accordingly",
    
    "manifest_version": 2,
    "incognito": "split",
    
    "chrome_url_overrides": {
      "newtab": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },    
    "permissions": ["activeTab","declarativeContent","storage"],
    "page_action": {
        "default_popup": "popup.html"
      },
    "options_page": "options.html",
    "icons": {
      "128": "icon.png"
      }
  }